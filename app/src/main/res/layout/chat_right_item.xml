<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/margin_twenty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3E4958"
        android:background="@drawable/edittext_corner_gray"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/padding_ten"
        >

        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum is derived from the Latin dolorem ipsum roughly translated as "
            android:maxWidth="280dp"
            android:minWidth="80dp"
            android:textSize="14sp"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.00PM"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="9dp"
            android:layout_alignEnd="@id/txtMsg"
            android:layout_below="@id/txtMsg"

            />
    </RelativeLayout>




</RelativeLayout>