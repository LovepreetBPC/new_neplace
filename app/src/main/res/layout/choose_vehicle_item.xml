<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16sp"
        >

        <RelativeLayout
            android:id="@+id/reltiveCar"
            android:layout_width="@dimen/margin_one_hundered_twenty"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circler_blue_bg"
            android:layout_height="@dimen/margin_one_hundered_twenty"

            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/img_car" />

        </RelativeLayout>
        
        

        <TextView
            android:id="@+id/txtCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lincoln MKZ"
            android:textAllCaps="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_below="@id/reltiveCar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_sixteen" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="$20.54"
            android:textColor="@color/white"
            android:layout_below="@id/txtCarName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:gravity="center"
            android:background="@mipmap/car_seets_bg"
            android:textColor="@color/black"
            android:layout_below="@id/txtPrice"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</RelativeLayout>