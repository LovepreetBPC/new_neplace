<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/RelativeMain"
        android:layout_width="match_parent"
        android:paddingHorizontal="20sp"
        android:paddingVertical="10sp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/circler_blue_bg"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            />

        <com.example.neplacecustomer.utils.textview.TextViewSemiBold
            android:id="@+id/txtDec"
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/viewDot"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="test"
            android:textSize="16sp"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@id/RelativeMain"
        android:layout_marginHorizontal="30sp"
        />

</RelativeLayout>